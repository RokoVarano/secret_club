<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <th>Post Name</th>
    <% if user_signed_in? %>
    <th>Author</th>
    <th>Edit</th>
    <th>Delete</th>
    <% end %>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        
        <td><%= link_to post.title, post %></td>
        <% if user_signed_in? %>
        <td>Posted by: <%= post.user.email %> </td>
        <%end%>
        
        <% if current_user == post.user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
